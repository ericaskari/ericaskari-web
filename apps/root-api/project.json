{
    "name": "root-api",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/root-api/src",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@nrwl/webpack:webpack",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/apps/root-api",
                "main": "apps/root-api/src/main.ts",
                "tsConfig": "apps/root-api/tsconfig.app.json",
                "assets": ["apps/root-api/src/assets"],
                "webpackConfig": "apps/root-api/extended-webpack.config.js",
                "generatePackageJson": true,
                "target": "node",
                "compiler": "tsc"
            },
            "configurations": {
                "production": {
                    "optimization": true,
                    "extractLicenses": true,
                    "inspect": false,
                    "fileReplacements": [
                        {
                            "replace": "apps/root-api/src/environments/environment.ts",
                            "with": "apps/root-api/src/environments/environment.prod.ts"
                        }
                    ]
                }
            }
        },
        "serve": {
            "executor": "@nrwl/node:node",
            "options": {
                "buildTarget": "root-api:build"
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["apps/root-api/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/apps/root-api"],
            "options": {
                "jestConfig": "apps/root-api/jest.config.ts",
                "passWithNoTests": true
            }
        }
    },
    "tags": []
}
