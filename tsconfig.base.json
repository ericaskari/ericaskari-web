{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ericaskari/api-common": ["Lib.Api.Common/src/index.ts"],
      "@ericaskari/common": ["Lib.Shared.Common/src/index.ts"],
      "@ericaskari/model": ["Lib.Shared.Model/src/index.ts"],
      "@ericaskari/web-endpoints": ["Lib.Web.Endpoints/src/index.ts"],
      "@ericaskari/web-forms": ["Lib.Web.Forms/src/index.ts"],
      "@ericaskari/web-state": ["Lib.Web.State/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
